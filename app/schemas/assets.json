{
    "doctype": "Asset",
    "fields": [
      {
        "fieldname": "asset_name",
        "fieldtype": "Data",
        "label": "Asset Name",
        "default_label":true,
        "required": true,
        "display_on_frontend":true,
        "validation": {
          "min_length": 2,
          "max_length": 100
        }
      },
      {
        "fieldname": "type",
        "fieldtype": "Select",
        "label": "Asset Type",
        "options": ["Database", "Server", "Web Application", "Endpoint Security"],
        "required": true,
        "default_label":false,
        "display_on_frontend":true
      },
      {
        "fieldname": "criticality",
        "fieldtype": "Select",
        "label": "Criticality Level",
        "options": ["Low", "Medium", "High", "Critical"],
        "required": true,
        "default_label":false,
        "display_on_frontend":true,
        "default": "Medium"
      },
      {
        "fieldname": "ip_hostname",
        "fieldtype": "Data",
        "label": "IP/Hostname",
        "display_on_frontend":true,
        "required": true,
        "default_label":false,
        "validation": {
          "regex": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}|[a-zA-Z0-9\\-]+(\\.[a-zA-Z0-9\\-]+)+)$"
        }
      },
      {
        "fieldname": "owner",
        "fieldtype": "Link",
        "label": "Asset Owner",
        "link_to": "User",
        "default_label":false,
        "display_on_frontend":true,
        "required": false
      },
      {
        "fieldname": "update",
        "fieldtype": "Link",
        "label": "Asset Owner",
        "link_to": "User",
        "default_label":false,
        "display_on_frontend":true,
        "required": false
      },
      {
        "fieldname": "updated_at",
        "fieldtype": "Data",
        "label": "Updated at",
        "default_label":false,
        "display_on_frontend":false,
        "required": false,
        "hidden":true
      },
      {
        "fieldname": "created_at",
        "fieldtype": "Data",
        "label": "Created at",
        "link_to": "User",
        "default_label":false,
        "display_on_frontend":false,
        "hidden":true
      }
    ]
  }