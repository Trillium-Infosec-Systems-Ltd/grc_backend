{
  "doctype": "Control",
  "fields": [
    {
      "fieldname": "control_name",
      "fieldtype": "Data",
      "label": "Control Name",
      "display_on_frontend": true,
      "span": 12,
      "required": true
    },
    {
      "fieldname": "control_id",
      "fieldtype": "Data",
      "label": "Control ID (e.g., PR.AC-1)",
      "display_on_frontend": false,
      "span": 12,
      "required": true
    },
    {
      "fieldname": "framework",
      "fieldtype": "Select",
      "label": "Framework",
      "span": 12,
      "options": ["NIST CSF", "ISO 27001", "PCI DSS", "HIPAA"],
      "required": true,
      "display_on_frontend": false,
      "default": "NIST CSF"
    },
    {
      "fieldname": "owner",
      "fieldtype": "Link",
      "label": "Control Owner",
      "link_to": "User",
      "span": 12,
      "display_on_frontend": false,
      "required": true
    },
    {
      "fieldname": "compliance_status",
      "fieldtype": "Select",
      "label": "Compliance Status",
      "options": ["Compliant", "Partially Compliant", "Non-Compliant", "Not Applicable"],
      "required": true,
      "span": 12,
      "display_on_frontend": true
    },
    {
      "fieldname": "implementation_guidelines",
      "fieldtype": "LongText",
      "label": "Implementation Guidelines",
      "display_on_frontend": false,
      "span": 12,
      "required": true
    },
    {
      "fieldname": "tools_systems",
      "fieldtype": "MultiSelect",
      "label": "Tools/Systems in Use",
      "options": ["Okta", "Azure AD", "Google Workspace", "AWS IAM", "Other"],
      "display_on_frontend": false,
      "span": 12
    },
    {
      "fieldname": "linked_policies",
      "fieldtype": "MultiLink",
      "label": "Linked Policies",
      "link_to": "Policy",
      "display_on_frontend": false,
      "span": 12
    },
    {
      "fieldname": "last_updated",
      "fieldtype": "Date",
      "label": "Last Updated",
      "display_on_frontend": false,
      "span": 12,
      "required": true
    },
    {
      "fieldname": "next_review_date",
      "fieldtype": "Date",
      "label": "Next Review Date",
      "display_on_frontend": false,
      "span": 12,
      "required": true
    },
    {
      "fieldname": "audit_requirements",
      "fieldtype": "LongText",
      "label": "Audit Requirements",
      "display_on_frontend": false,
      "span": 12
    },
    {
      "fieldname": "known_gaps",
      "fieldtype": "LongText",
      "label": "Known Gaps/Issues",
      "display_on_frontend": false,
      "span": 12
    },
    {
      "fieldname": "updated_at",
      "fieldtype": "Data",
      "label": "Updated at",
      "default_label": false,
      "display_on_frontend": false,
      "span": 12,
      "hidden": true
    },
    {
      "fieldname": "created_at",
      "fieldtype": "Data",
      "label": "Created at",
      "default_label": false,
      "display_on_frontend": false,
      "span": 12,
      "hidden": true
    },
    {
      "fieldname": "description",
      "fieldtype": "Text",
      "label": "Description",
      "span": 12,
      "display_on_frontend": true
    },
    {
      "fieldname": "attached_files",
      "fieldtype": "MultiFileUpload",
      "label": "Attached Evidence / Files",
      "span": 12,
      "display_on_frontend": false
    },
    {
      "fieldname": "applicable_asset_category",
      "fieldtype": "MultiSelect",
      "label": "Applicable Asset Category",
      "options": [
        "Endpoints",
        "Identity & Access Management Systems",
        "Servers & Databases",
        "Cloud Infrastructure"
      ],
      "display_on_frontend": false,
      "span": 12
    },
    {
      "fieldname": "control_assessment",
      "fieldtype": "Table",
      "label": "Control Assessment",
      "span": 12,
      "display_on_frontend": false,
      "fields": [
        {
          "fieldname": "question",
          "fieldtype": "Data",
          "label": "Control Question",
          "required": true,
          "span": 10
        },
        {
          "fieldname": "status",
          "fieldtype": "Check",
          "label": "Yes / No",
          "required": false,
          "span": 2
        }
      ]
    }
  ]
}
